generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id    Int     @id @default(autoincrement())
  name String @unique
  fbLink String?
  phone Int? @unique
  fbId String? @unique
}

model artwork {
    id    Int     @id @default(autoincrement())
    name String 
    path String
    art_name String
    start_price Int
    bid_rate Int
    fee Int
    description String
    end_at DateTime
    start_at DateTime @default(now())
    notified  Boolean  @default(false)
    bidHistories bidHistory[] @relation("ArtWorkToBid")
}

model bidHistory{
    id Int @id @default(autoincrement())
    bid_amount Int
    bidder_name String
    bid_at DateTime @default(now())
    id_artwork Int

    artwork     artwork   @relation("ArtWorkToBid",fields: [id_artwork], references: [id])
}